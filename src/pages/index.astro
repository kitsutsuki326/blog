---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout>
  <section>
    {posts.length === 0 && (
      <p class="text-sm text-warm-400">まだ記事がありません。</p>
    )}

    <ul class="space-y-16">
      {posts.map((post) => (
        <li>
          <a href={`/blog/${post.id}`} class="group block">
            <time class="text-xs tracking-wider text-warm-400 uppercase">
              {post.data.date}
            </time>
            <h2 class="text-xl font-serif text-warm-900 mt-2 group-hover:text-kodak-red transition-colors leading-relaxed">
              {post.data.title}
            </h2>
            <p class="text-sm text-warm-500 mt-2 leading-relaxed">
              {post.data.description}
            </p>
            {post.data.tags && (
              <div class="flex gap-3 mt-3">
                {post.data.tags.map((tag: string) => (
                  <span class="text-xs tracking-wider text-warm-400">#{tag}</span>
                ))}
              </div>
            )}
          </a>
        </li>
      ))}
    </ul>
  </section>
</Layout>
